<h4>Post details:</h4>
<br />
<p>
	<%= @row['content'] %>
	<br />
	<br />
	added at <%= @row['created_date'] %>
</p>
<br />
<h4>Comments:</h4>
<br />
<% @comments.each do |comment| %>
	<p>
		<%= comment['comment'] %>
		<br />
		<br />
		<span style="font-size: 75%; color: #999;">At <%= comment['created_date'] %></span>
	</p>
	<hr />
<% end %>
<p>
	<form action="/details/<%= @row['id'] %>" method="POST" role="form">
  		<textarea name="comment" class="form-control" rows="6" placeholder="Type comment text here"></textarea>
  		<br/>
  		<button type="submit" class="btn btn-primary">Add comment</button>
	</form>
</p>